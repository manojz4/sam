vi /etc/selinux/config
disabled
restart pc
sestatus
systemctl stop firewalld.service
systemctl disable firewalld.service
systemctl status firewalld.service 
init 6   (reboot)
----
vi /etc/warewulf/warewulf.conf  don,t put slash anywhere in ip

    ipaddr: 192.168.253.160  # enter host-only ip 
    netmask: 255.255.255.0
    network: 192.168.253.0   # network of hostonly ip

    dhcp:
    enabled: true
    range start: 192.168.253.190    # range for of hostonly ip start 
    range end: 192.168.253.250      # range for of hostonly ip end
    systemd name: dhcpd
----
wwctl configure --all sudo systemctl status dhcpd
systemctl status tftp
systemctl status nfs-server
systemctl enable --now tftp 
systemctl start tftp 
systemctl enable --now warewulfd
----

wwctl server status
